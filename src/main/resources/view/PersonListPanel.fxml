<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <TableView fx:id="table">
      <columns>
         <TableColumn fx:id="name" editable="false" text="Name" />
         <TableColumn fx:id="photo" editable="false" text="Photo" style="-fx-alignment: CENTER;"/>
         <TableColumn fx:id="email" text="Email" />
         <TableColumn fx:id="address" text="Address" />
         <TableColumn editable="false" text="Statistics">
            <columns>
               <TableColumn fx:id="performance" text="Performance" style="-fx-alignment: CENTER;"/>
               <TableColumn fx:id="remark" text="Remark" style="-fx-alignment: CENTER;"/>
            </columns>
         </TableColumn>
      </columns>
      <columnResizePolicy>
         <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
      </columnResizePolicy>
   </TableView>
</VBox>
